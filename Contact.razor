@page "/email"

<link href="/css/contact.css" rel="stylesheet" />
<script src="/Contact.js"></script>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<div class="email-container">
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="logo">
            Air University Student Portal<br />
            <span>Registration System</span>
        </div>
        <div class="nav-links">
            <a href="#">Home</a>
            <a href="#">About</a>
            <a href="#">Programs</a>
            <a href="#">Administration</a>
            <a href="#">Contact</a>
            <a href="#">FAQs</a>
            <button class="apply-btn">Apply Now</button>
        </div>
    </nav>

    <!-- Email UI -->
    <div class="email-content">
        <h2>New Message</h2>
        <input type="text" placeholder="To" class="email-input" />
        <input type="text" placeholder="Subject" class="email-input" />
        <div class="email-editor" contenteditable="true"></div>

        <!-- Bottom Toolbar -->
        <div class="toolbar">
            <div class="send-section">
                <button class="send-btn">
                    <i class="material-icons">send</i> Send
                </button>
                <button class="dropdown-btn"><i class="material-icons">arrow_drop_down</i></button>
            </div>

            <div class="rich-toolbar">
                <button><i class="material-icons">undo</i></button>
                <button><i class="material-icons">redo</i></button>
                <select>
                    <option>Sans Serif</option>
                    <option>Serif</option>
                    <option>Monospace</option>
                </select>
                <button><i class="material-icons">format_bold</i></button>
                <button><i class="material-icons">format_italic</i></button>
                <button><i class="material-icons">format_underlined</i></button>
                <button><i class="material-icons">format_color_text</i></button>
                <button><i class="material-icons">format_align_left</i></button>
                <button><i class="material-icons">format_align_right</i></button>
                <button><i class="material-icons">format_list_bulleted</i></button>
            </div>

            <div class="icon-bar">
                <i class="material-icons">attach_file</i>
                <i class="material-icons">link</i>
                <i class="material-icons">insert_emoticon</i>
                <i class="material-icons">warning</i>
                <i class="material-icons">image</i>
                <i class="material-icons">lock</i>
                <i class="material-icons">edit</i>
                <i class="material-icons">event</i>
                <i class="material-icons">more_vert</i>
                <i class="material-icons">delete</i>
            </div>
        </div>
    </div>
</div>