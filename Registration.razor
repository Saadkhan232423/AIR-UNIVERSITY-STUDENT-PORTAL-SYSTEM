<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #0c1a2b;
        color: white;
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #081421;
        padding: 20px;
    }

        .navbar .logo-area {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .navbar .logo-area img {
                height: 40px;
            }

            .navbar .logo-area h2 {
                margin: 0;
                font-size: 18px;
            }

            .navbar .logo-area span {
                font-size: 14px;
                display: block;
            }

        .navbar ul {
            list-style: none;
            display: flex;
            gap: 20px;
            padding: 0;
        }

            .navbar ul li a {
                color: white;
                text-decoration: none;
                font-size: 14px;
            }

        .navbar button {
            background-color: white;
            color: black;
            border: 1px solid #ccc;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: bold;
            cursor: pointer;
        }

    .header {
        text-align: center;
        margin: 30px 0 10px;
        font-size: 24px;
        font-weight: bold;
    }

    .filters {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 20px;
    }

        .filters input,
        .filters select {
            padding: 8px;
            border-radius: 5px;
            border: none;
            font-size: 14px;
        }

    .error {
        text-align: center;
        color: red;
        font-size: 14px;
        margin-bottom: 10px;
    }

    .course-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 20px;
        padding: 0 40px;
    }

    .course-card {
        background-color: #ffffff;
        color: black;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        transition: transform 0.3s;
    }

        .course-card:hover {
            transform: translateY(-5px);
        }

        .course-card h4 {
            margin: 0 0 5px;
        }

        .course-card p {
            margin: 3px 0;
            font-size: 13px;
        }

        .course-card button {
            background-color: #007bff;
            border: none;
            padding: 8px;
            color: white;
            border-radius: 5px;
            margin-top: 10px;
            cursor: pointer;
        }

            .course-card button.enrolled {
                background-color: #28a745;
            }

    .submit-btn {
        text-align: center;
        margin: 30px;
    }

        .submit-btn button {
            background-color: white;
            color: #081421;
            font-weight: bold;
            border: none;
            padding: 10px 30px;
            border-radius: 8px;
            cursor: pointer;
        }
</style>

